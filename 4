<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Sorting Hat</title>
    <script>
        function Student() {
            const name = prompt("Enter your name:");
            const houseNumber = Math.floor(Math.random() * 4) + 1;
            let house;
            switch (houseNumber) {
                case 1:
                    house = "Gryffindor";
                    break;
                case 2:
                    house = "Slytherin";
                    break;
                case 3:
                    house = "Hufflepuff";
                    break;
                case 4:
                    house = "Ravenclaw";
                    break;
            }
            document.getElementById("result").innerHTML = `${name}, you are ${house}.`;
        }
    </script>
</head>
<body onload="Student()">
    <h1>Hogwarts Sorting Hat</h1>
    <p id="result"></p>
</body>
</html>
